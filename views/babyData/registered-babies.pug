doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Registered Babies
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
    link(rel='stylesheet' href='/public/css/style.css')

    main.container(role="main" style="padding: 70px;")

        
        a(href="/new-baby").btn.btn.sm.btn-info Add New
                
        div.container.mt-4
            h1.text-center.mb-4.fw-bold.text-secondary LIST OF ALL BABIES
                

            if babies.length
                table.table.table-bordered.table-striped.mt-5
                    thead.table-dark
                        tr
                            th #ID
                            th Full Name
                            th Parent Name
                            th Guardian
                            th Gender
                            th Age
                            th Location
                            th Actions
                    tbody
                    each baby in babies
                        tr
                            td= baby.babyNumber
                            td= baby.fullName
                            td= baby.parentsName
                            td= baby.guardian
                            td= baby.gender
                            td= baby.age
                            td= baby.location
                            td
                                a(href=`/baby-clockout/${baby._id}` data-id=`${baby._id}`).btn.btn.sm.btn-success Clock-out
                                //-span 
                                //-a(href=`/purchase-item/${baby._id}` data-id=`${baby._id}`).btn.btn.sm.btn-primary Purchase Item
            else
                p.alert.alert-warning.text-center.fs-5 No records found...



    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4' crossorigin='anonymous')
